/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 重置button默认样式 */

button {
  border-width: 0 !important;
  border-radius: unset;
}

button.button-hover {
  background-color: transparent;
}

/* 1.card */

.card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 40px;
}

.card button {
  width: 40%;
  height: 40px;
  font-size: 16px;
  line-height: 40px;
}

.card button.active {
  background-color: unset;
  border-bottom: 3px solid #08d !important;
  color: #08d;
}

/* 2.line */

.line {
  width: 100%;
  height: 120px;
  border-top: 2px solid #e5e5e5;
  border-bottom: 2px solid #e5e5e5;
  background-color: #fff;
}

.line>view {
  display: flex;
  justify-content: space-around;
}

.line-city {
  position: relative;
  height: 60%;
}

.line-city view {
  width: 38%;
  border-bottom: 1px solid #e5e5e5;
  font-size: 20px;
  color: #555;
  line-height: 100px;
}

.line-city view:nth-last-of-type(2) {
  text-align: right;
}

.line-city>.img {
  position: absolute;
  top: 25%;
  left: 50%;
  width: 50px;
  height: 50px;
  margin-left: -25px;
  border: 0;
}

.line-city .img image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.line-city .img image:first-of-type {
  transform: scale(0.6);
}

.line-date {
  height: 48px;
}

.line-date>view {
  display:flex;
  justify-content: space-between;
  width: 38%;
  font-size: 14px;
  color:#333;
  line-height: 48px;
}
.line-date>view>text:last-of-type{
  color:#888;
}
